{
  "name": "wl-react-skeleton",
  "version": "1.0.2",
  "description": "React Customizable Skeleton Element",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "yarn build",
    "test": "jest --maxWorkers 2",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint {src,tests}/**/*.{ts,tsx}",
    "lint:fix": "yarn lint --fix",
    "lint:types": "tsc --noEmit",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn build:cjs && yarn build:es && node copy.js",
    "clean": "rimraf lib esm",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:types && lint-staged",
      "pre-push": "yarn lint && yarn clean && yarn build && yarn test"
    }
  },
  "author": "WIlfred Lopez",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/wilfredlopez/wl-react-skeleton"
  },
  "bugs": {
    "url": "https://github.com/wilfredlopez/wl-react-skeleton/issues"
  },
  "homepage": "https://github.com/wilfredlopez/wl-react-skeleton#readme",
  "keywords": [
    "Skeleton",
    "react",
    "Component"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.1",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@shopify/jest-dom-mocks": "2.9.1",
    "@testing-library/react": "10.4.8",
    "@testing-library/react-hooks": "3.4.1",
    "@types/jest": "26.0.10",
    "@types/react": "16.9.11",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-dynamic-import-node": "2.3.3",
    "eslint": "7.7.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.1.0",
    "fork-ts-checker-webpack-plugin": "5.0.14",
    "husky": "4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.4.0",
    "jest-localstorage-mock": "^2.4.3",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-test-renderer": "16.13.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": "rc"
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "volta": {
    "node": "10.22.0",
    "yarn": "1.22.4"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|tsx)"
    ],
    "moduleNameMapper": {
      "\\.(css|sass)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "<rootDir>/tests/setupTests.ts"
    ]
  }
}
